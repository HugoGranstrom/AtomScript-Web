#AtomScript
include "Person.atom";

@btn;
@bob = *Person();
bob::name = "Robert";
bob::age = 15;

Person<prototype> ask = $(question){

	return prompt(bob::name + " asks: " + question);

}

$main(){
	
	btn = get(":theBtn");
	btn::onclick = $(){
	
		bob<say>("Hello, YouTube! My name is " + bob::name + "!");
		@a = bob<ask>("What is your name?");
		bob<say>("Hi, " + a + "!");
	
	}
	
}